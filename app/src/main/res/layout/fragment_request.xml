<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#f7f7fa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/imageView"
                        android:src="@drawable/profile"
                        android:id="@+id/circleView"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/camera"
                            android:id="@+id/camera"/>

                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editText_height"
                    android:layout_marginTop="6dp"
                    android:hint="Enter the FirstName"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_name_first"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/rounded_edittext"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editText_height"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter the Last Name"
                    android:id="@+id/edt_name_last"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="textAutoComplete"
                    android:background="@drawable/rounded_edittext"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editText_height"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter the ContactNumber"
                    android:id="@+id/edt_number"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editText_height"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_edittext">

                    <EditText
                        android:id="@+id/editText_userType"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:ems="12"
                        android:hint="Enter the User type" />

                    <Spinner
                        android:id="@+id/sp_user_type"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edttext_rounded"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="Premises"
                        android:textAllCaps="true"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext">
                        <EditText
                            android:id="@+id/editText_premises_buildings"
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:ems="18"
                            android:hint="Enter the Premises Buildings" />
                        <Spinner
                            android:id="@+id/sp_premises"
                            android:layout_width="match_parent"
                            android:layout_marginTop="3dp"
                            android:layout_height="@dimen/editText_height"></Spinner>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext">

                        <EditText
                            android:id="@+id/editText_premises_floors"
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:ems="18"
                            android:hint="Enter the premises floors" />

                        <Spinner
                            android:id="@+id/sp_premises_home"
                            android:layout_width="match_parent"
                            android:layout_marginTop="3dp"
                            android:layout_height="@dimen/editText_height"></Spinner>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Upload"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:id="@+id/but_upload"
                    android:background="@drawable/loginbackground"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>






</LinearLayout>